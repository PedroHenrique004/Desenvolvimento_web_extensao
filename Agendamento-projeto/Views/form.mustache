<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Agendamento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Formulário de Agendamento</h1>

        <form action="/submit" method="POST" novalidate>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Nome</label>
                    <input type="text" name="nome" class="form-control" value="{{formData.nome}}">
                    <div class="text-danger">{{errors.nome}}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Sobrenome</label>
                    <input type="text" name="sobrenome" class="form-control" value="{{formData.sobrenome}}">
                    <div class="text-danger">{{errors.sobrenome}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>CPF</label>
                    <input type="text" name="cpf" class="form-control" value="{{formData.cpf}}">
                    <div class="text-danger">{{errors.cpf}}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Telefone</label>
                    <input type="text" name="telefone" class="form-control" value="{{formData.telefone}}">
                    <div class="text-danger">{{errors.telefone}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" value="{{formData.email}}">
                    <div class="text-danger">{{errors.email}}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Data do Agendamento</label>
                    <input type="date" name="data_agendamento" class="form-control" value="{{formData.data_agendamento}}">
                    <div class="text-danger">{{errors.data_agendamento}}</div>
                </div>

                <div class="col-md-12 mb-3">
                    <label>Endereço</label>
                    <input type="text" name="endereco" class="form-control" value="{{formData.endereco}}">
                    <div class="text-danger">{{errors.endereco}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Estado</label>
                    <select name="estado" class="form-select">
                        <option value="">Selecione</option>
                        <option value="SP" {{#formData.estado}}selected{{/formData.estado}}>SP</option>
                        <option value="RJ">RJ</option>
                    </select>
                    <div class="text-danger">{{errors.estado}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Cidade</label>
                    <select name="cidade" class="form-select">
                        <option value="">Selecione</option>
                        <option value="São Paulo">São Paulo</option>
                        <option value="Rio de Janeiro">Rio de Janeiro</option>
                    </select>
                    <div class="text-danger">{{errors.cidade}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>CEP</label>
                    <input type="text" name="cep" class="form-control" value="{{formData.cep}}">
                    <div class="text-danger">{{errors.cep}}</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Bairro</label>
                    <input type="text" name="bairro" class="form-control" value="{{formData.bairro}}">
                    <div class="text-danger">{{errors.bairro}}</div>
                </div>

                <div class="mb-3">
                    <label>Observação</label>
                    <textarea name="observacao" class="form-control">{{formData.observacao}}</textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</body>
</html>
